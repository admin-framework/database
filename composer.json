{
  "name": "admin-framework/database",
  "description": "A simple PHP database component",
  "type": "library",
  "license": "MIT",
  "version": "1.0.0",
  "authors": [
    {
      "name": "Admin Framework",
      "email": "admin@adminframework.com",
      "homepage": "https://www.adminframework.com"
    }
  ],
  "require": {
    "php": ">=7.4"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0",
    "squizlabs/php_codesniffer": "^3.7"
  },
  "autoload": {
    "psr-4": {
      "AdminFramework\\Database\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "AdminFramework\\Database\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit tests/",
    "cs-check": "phpcs --standard=PSR12 src/ tests/",
    "cs-fix": "phpcbf --standard=PSR12 src/ tests/"
  }
}
